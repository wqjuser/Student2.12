<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="要修改的教师工号"
            android:layout_weight="0.5" />

        <EditText
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text"
            android:id="@+id/sds_update_teacher_gonghao"
            android:layout_weight="1" />

    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#ccc"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="修改姓名：" />

        <EditText
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:drawable/edit_text"
            android:id="@+id/sds_update_teacher_name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="带领专业" />

        <EditText
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text"
            android:id="@+id/sds_update_teacher_dailingzhuanye"
            android:layout_weight="1"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dip"
            android:text="带领学院："
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

        <EditText
            android:layout_width="0dip"
            android:id="@+id/sds_update_teacher_nianji"
            android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text"
            android:layout_weight="1" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="邮箱：" />

        <EditText
            android:id="@+id/sds_update_teacher_pici"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text"
            android:layout_weight="1" />

    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="提交"
        android:textSize="20dp"
        android:id="@+id/sds_update_teacher_leader"

        />

</LinearLayout>
